GEANT-NSS        =   1*(subStChar) 0*(":" 1*(subStChar))



subStChar       =   trans / "%" HEXDIG HEXDIG



trans           =   ALPHA / DIGIT / other / reserved



other           =   "(" / ")" / "+" / "," / "-" / "." /

                               "=" / "@" / ";" / "$" /

                               "_" / "!" / "*" / "'"


reserved        =   "%" / "/" / "?" / "#"

